<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvCambioClaveTransactionNumeroDocumentoTitle"
        style="@style/StyleTextPrimaryLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_title_cambio_clave" />

    <TextView
        android:id="@+id/txvCambioClaveTransactionNumeroDocumentoSubtitle"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvCambioClaveTransactionNumeroDocumentoTitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_numero_documento" />

    <EditText
        android:id="@+id/edtCambioClaveTransactionNumeroDocumentoValor"
        style="@style/StyleValueNumberPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvCambioClaveTransactionNumeroDocumentoSubtitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:maxLength="10" />

    <Button
        android:id="@+id/btnCambioClaveTransactionNumeroDocumentoBotonCancelar"
        style="@style/StyleButtonCancel"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edtCambioClaveTransactionNumeroDocumentoValor"
        android:text="@string/general_text_button_cancelar" />

    <Button
        android:id="@+id/btnCambioClaveTransactionNumeroDocumentoBotonAceptar"
        style="@style/StyleButtonAccept"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtCambioClaveTransactionNumeroDocumentoValor"
        android:text="@string/general_text_button_aceptar" />


</RelativeLayout>