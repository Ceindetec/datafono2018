<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvConfiguracionRegisterPassTecnicoTitle"
        style="@style/StyleTextPrimaryLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/configuration_text_title_configuracion" />

    <TextView
        android:id="@+id/txvConfiguracionRegisterPassTecnicoClave"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvConfiguracionRegisterPassTecnicoTitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/configuration_text_ingresar_pass_tecnico" />

    <EditText
        android:id="@+id/edtConfiguracionRegisterPassTecnicoContenidoClave"
        style="@style/StylePassPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvConfiguracionRegisterPassTecnicoClave"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:maxLength="4" />

    <Button
        android:id="@+id/btnConfiguracionRegisterPassTecnicoBotonCancelar"
        style="@style/StyleButtonCancel"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edtConfiguracionRegisterPassTecnicoContenidoClave"
        android:text="@string/general_text_button_cancelar" />

    <Button
        android:id="@+id/btnConfiguracionRegisterPassTecnicoBotonAceptar"
        style="@style/StyleButtonAccept"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtConfiguracionRegisterPassTecnicoContenidoClave"
        android:text="@string/general_text_button_aceptar" />


</RelativeLayout>